<div class="container">
  <div class="jumbotron">
  <h1>burgers!</h1>
  <img src="./assets/img/burgerkingwhopper.jpeg" class="img-circle" width="250" height="250" alt="burger image">
</div>
</div>



<div>
  <h2>burgers that are devoured!</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>burgers that are not devoured!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<div class="container center_div">
  <form class="create-form">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
      <label for="devoured"><h2>devoured?</h2></label><br>
      <input type="radio" name="devoured" value="1" checked> devoured!<br>
      <input type="radio" name="devoured" value="0"> Not Eaten
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>